set $mod Mod4

set $scripts /home/dulnan/.config/i3/scripts



set $bg-color            			#1d2021
set $inactive-bg-color   			#1b1b1b
set $text-color          			#f3f4f5
set $inactive-text-color 			#676E7D
set $urgent-bg-color     			#E53935
set $border-focus				 			#665c54
set $border-focus-indicator		#7c6f64

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
#font pango:monospace 12

# This font is widely installed, provides lots of unicode glyphs, right- to-left
# text rendering and scalability o n retina/hidpi displays (thanks to pango).
font pango: RobotoMono SemiBold 11

# window colors
#                       border              background         text                 indicator									child_border
client.focused          $border-focus       $bg-color          $text-color          $border-focus-indicator 						$border-focus
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color $inactive-bg-color
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color $inactive-bg-color
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $inactive-bg-color



bar {
	status_command polybar example
	mode invisible
	position top
	tray_output none
}

#exec polybar example


# Titlebars
new_window pixel 2
new_float normal

gaps inner 32
gaps outer 0




# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
# bindsym $mod+space exec rofi -show run -lines 3 -eh 2 -width 100 -padding 200 -opacity "85" -bw 0 -bc "$bg-color" -bg "$bg-color" -fg "#00FF00" -hlbg "$bg-color" -hlfg "#9575cd" -font "System San Francisco Display 18"
# bindsym $mod+space exec rofi -show run -width 2560 -fg "#B0E670" -bg "#14161F" -hlfg "#14161F" -hlbg "#B0E670" -bc "#14161F" -location 0 -lines 19 -bw 0 -font "MonacoB 16" -padding 770 -separator-style none -opacity 80
#bindsym $mod+space exec rofi -show combi
bindsym $mod+space exec rofi -show combi -run-command "/bin/zsh -i -c '{cmd}'" -rnow
bindsym $mod+l exec lock



# bindsym $mod+space exec rofi
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
