# # Move window
# cmd + ctrl - left              :   kwmc window -s west
# cmd + ctrl - right             :   kwmc window -s east
# cmd + ctrl - up                :   kwmc window -s north
# cmd + ctrl - down              :   kwmc window -s south

# # resize window
# cmd + shift - left              :   kwmc window -c expand 0.05 west && kwmc window -c expand 0.05 east
# cmd + shift - right             :   kwmc window -c reduce 0.05 west && kwmc window -c reduce 0.05 east
# cmd + shift - up                :   kwmc window -c expand 0.05 north && kwmc window -c expand 0.05 south
# cmd + shift - down              :   kwmc window -c reduce 0.05 north && kwmc window -c reduce 0.05 south

# # focus window
# cmd + alt - left                :   kwmc window -f west
# cmd + alt - right               :   kwmc window -f east
# cmd + alt - up                  :   kwmc window -f north
# cmd + alt - down                :   kwmc window -f south

# # move window to next display (0x2F = . )
# cmd + ctrl - 0x2F               :   kwmc window -m display next

# # make window fullscreen
# cmd + ctrl - f                  :   kwmc window -z fullscreen

# # switch spaces
# cmd - left                      :   kwmc space -fExperimental left
# cmd - right                     :   kwmc space -fExperimental right

# # make window floatable
# cmd + ctrl + alt - f            :   kwmc window -t focused

# # set vertical or horizontal tiling
# cmd + ctrl + alt - v            :   kwmc display -c vertical
# cmd + ctrl + alt - h            :   kwmc display -c horizontal

# cmd + shift + alt - r            :   brew services restart kwm
# cmd + shift + alt - s            :   kwmc window -c split-mode toggle





cmd + shift + alt - r            :   khd -e "reload" && sh ~/.chunkwmrc
cmd + alt + ctrl - r : khd -e "reload"

# Move window
cmd + ctrl - h                 :   chunkc tiling::window --warp west
cmd + ctrl - l                 :   chunkc tiling::window --warp east
cmd + ctrl - k                 :   chunkc tiling::window --warp north
cmd + ctrl - j                 :   chunkc tiling::window --warp south

# resize window
cmd + -alt - h:   chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west && chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east
cmd + alt - l:   chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west && chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east
cmd + alt - k:   chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north && chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
cmd + alt - j:   chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north && chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south

# focus window
cmd + shift - h:   chunkc tiling::window --focus west
cmd + shift - l:   chunkc tiling::window --focus east
cmd + shift - k:   chunkc tiling::window --focus north
cmd + shift - j:   chunkc tiling::window --focus south

# move window to next display (0x2F = . )
cmd + ctrl - 0x2F               :   chunkc tiling::monitor --send-to-monitor index 
cmd + ctrl + alt - h            :   chunkc tiling::window --use-insertion-point west 
cmd + ctrl + alt - l            :   chunkc tiling::window --use-insertion-point east
cmd + ctrl + alt - k            :   chunkc tiling::window --use-insertion-point north
cmd + ctrl + alt - j            :   chunkc tiling::window --use-insertion-point south
# make window fullscreen
cmd + ctrl - f                  :   kwmc tiling::window -z fullscreen

# # switch spaces
# cmd - left                      :   chunkc window -d prev
# cmd - right                     :   chunkc window -d next

# make window floatable
cmd + ctrl + alt - f            :   chunkc tiling::window --toggle float

# set vertical or horizontal tiling
cmd + ctrl + alt - up            :   chunkc tiling::desktop --mirror horizontal
cmd + ctrl + alt - 0x2F            :   chunkc tiling::desktop --rotate 90

cmd + shift + alt - r            :   brew services restart kwm
cmd + shift + alt - s            :   kwmc window -c split-mode toggle
