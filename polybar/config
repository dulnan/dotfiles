background-alt = #444
foreground = #d5c4a1
foreground-alt = #55
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
yellow = #fabd2f

[global/wm]
margin-top = 50
margin-bottom = 0




[bar/dummy]
